<UserControl x:Class="JardineriaWPF.UserControls.EstadisticasOpciones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JardineriaWPF.UserControls"
             mc:Ignorable="d" Height="140.625" Width="140">
    <Grid>
        <WrapPanel Orientation="Vertical">
            <Button Height="50" 
                    Name="pedidos"
                    Click="pedidos_Click"
                    Width="120" 
                    FontSize="20"
                    Foreground="White"  
                    Background="#3370db"
                    Margin="10">Pedidos</Button>
            <Button Height="50" 
                    Name="oficina"
                    Click="oficina_Click"
                    Width="120" 
                    FontSize="20"                   
                    Foreground="White"  
                    Background="#3370db"
                    Margin="10">Oficina</Button>
        </WrapPanel>

    </Grid>
</UserControl>